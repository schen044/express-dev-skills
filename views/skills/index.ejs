<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <title><%= title %></title>
</head>
<body>
    <h1>Skills</h1>
    <ul>
        <% skills.forEach(function(skill) { %>
          <li>
            <form action="/skills/<%= skill.skillName %>?_method=DELETE"
              class="delete-form" method="POST">
              <button type="submit">X</button>
            </form>
            <a href="/skills/<%= skill.skillName %>">
                <%= skill.skillName %>
            </a>
             used in 
            <%= skill.project %>
          </li>
        <% }); %>
      </ul>
      <a href="/skills/new">Add Skills</a>
</body>
</html>